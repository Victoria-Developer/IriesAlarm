<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.Launch" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/teal_700</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen</item>
        <item name="postSplashScreenTheme">@style/NormalTheme</item>
        <item name="android:windowSplashScreenBehavior" tools:targetApi="33">icon_preferred</item>
    </style>

    <style name="NormalTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowSplashScreenBackground">@color/teal_700</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen</item>
    </style>
</resources>